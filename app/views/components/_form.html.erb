<%= form_for(@component) do |f| %>
  <% if @component.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@component.errors.count, "error") %> prohibited this component from being saved:</h2>

      <ul>
      <% @component.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :version %><br>
    <%= f.text_field :version %>
  </div>
  <div class="field">
    <%= f.label :icon %><br>
    <%= f.file_field :icon %>
  </div>
  <%= f.label "measurements you will need" %><br>
  <% @measurements.order(:name).each do |measurement| %>
    <%= check_box_tag "measurements[]" , measurement.id , @component_measurements.include?(measurement) ? true : false %>
     <p> <%= measurement.name%></p>
   <% end %>
   <%= f.label "Level of Amputation" %><br>
   <% @amputation_levels.order(:name).each do |level| %>
     <%= check_box_tag "levels[]" , level.id , @component_amputation_level.include?(level) ? true : false %>
      <p> <%= level.name%></p>
    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
