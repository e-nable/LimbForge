<%= render 'pages/dashboardnav'%>
<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Limbforge Components</h1>
  <div class="row">
    <div class="col-xs-3">
      <h3> Name</h3>
    </div>
    <div class="col-xs-9">
      <h3>Actions</h3>
    </div>
  </div>

  <% @components.order('name ASC').each do |component| %>
    <div class="row">
      <div class="col-xs-3">
        <p><strong><%= component.name %></strong></p>
      </div>
      <div class="col-xs-9">
        <p>
          <%= link_to 'Show', component , class: "link"%>
          <%= link_to 'Edit', edit_component_path(component), class: "link" %>
          <%= link_to 'Delete', component, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
        </p>
      </div>
    </div>
  <% end %>
  <a href="<%= new_component_path%>">
    <button>Add new component</button>
  </a>
</div>
