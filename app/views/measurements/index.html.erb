<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Limb Measurements</h1>
  <div class="row">
    <div class="col-xs-3">
      <h3> Name</h3>
    </div>
    <div class="col-xs-9">
      <h3>Actions</h3>
    </div>
  </div>

  <% @measurements.order('name ASC').each do |measurement| %>
    <div class="row">
      <div class="col-xs-3">
        <p><strong><%= measurement.name %></strong></p>
      </div>
      <div class="col-xs-9">
        <p>
          <%= link_to 'Show', measurement , class: "link"%>
          <%= link_to 'Edit', edit_measurement_path(measurement), class: "link" %>
          <%= link_to 'Delete', measurement, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
        </p>
      </div>
    </div>
  <% end %>
  <a href="<%= new_measurement_path%>">
    <button>Add new Measurement</button>
  </a>
</div>
<br>
