<div id='devise' class="container">
  <%= devise_error_messages! %>
  <div class="form-container center password-reset">
    <a class="blue-txt home" href='http://enablecommunityfoundation.org/'>home</a>
    <a class="blue-txt new-account" href="<%= new_session_path(resource_name) %>"> login</a>
    <img src="<%= asset_path('brand/logo.svg')%>">
    <p class="header">Limbforge_password_edit</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, placeholder: 'password', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: 'password confirmation', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
