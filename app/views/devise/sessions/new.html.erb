<div id='devise' >
  <%= devise_error_messages! %>
  <div class="container">
    <div class="form-container center login">
      <a class="blue-txt home" href='https://www.limbforge.org/'>home</a>
      <a class="blue-txt new-account" href="<%= new_user_registration_path %>"> new account</a>
      <img src="<%= asset_path('brand/logo.svg')%>">
      <p class="header">Limbforge_demo_login</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "email", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
        </div>
        <div class="hidden">
          <input type="text" hidden="true" value="" name="user[nickname]">
        </div>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
