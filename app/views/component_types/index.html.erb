<%= render 'pages/dashboardnav'%>
<p id="notice"><%= notice %></p>
<div class="container form-padding">
  <h1>Component Types</h1>
  <div class="row">
    <div class="col-xs-3">
      <h3> Name</h3>
    </div>
  </div>

  <% @component_types.each do |component_type| %>
    <div class="row">
      <div class="col-xs-3">
        <p><strong><%= component_type.name %></strong></p>
      </div>
      <div class="col-xs-9">
        <p>
          <%= link_to 'Show', component_type , class: "link"%>
          <%= link_to 'Edit', edit_component_type_path(component_type), class: "link" %>
          <%= link_to 'Delete', component_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
        </p>
      </div>
    </div>
  <% end %>
  <a href="<%= new_component_type_path  %>">
    <button>Add new component type</button>
  </a>
</div>
