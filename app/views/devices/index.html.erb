<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Limbforge Devices</h1>
  <div class="row">
    <div class="col-xs-3">
      <h3> Name</h3>
    </div>
    <div class="col-xs-9">
      <h3>Actions</h3>
    </div>
  </div>

  <% @devices.order('name ASC').each do |device| %>
    <div class="row">
      <div class="col-xs-3">
        <p><strong><%= device.name %></strong></p>
      </div>
      <div class="col-xs-9">
        <p>
          <%= link_to 'Show', device , class: "link"%>
          <%= link_to 'Edit', edit_device_path(device), class: "link" %>
          <%= link_to 'Delete', device, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
        </p>
      </div>
    </div>
  <% end %>
  <a href="<%= new_measurement_path%>">
    <button>Add new Device</button>
  </a>
</div>
