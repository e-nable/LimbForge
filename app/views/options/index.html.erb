<%= render 'pages/dashboardnav'%>
<p id="notice"><%= notice %></p>
<div class="container form-padding">
  <h1>Options</h1>
  <div class="row">
    <div class="col-xs-3">
      <h3> Name</h3>
    </div>
  </div>

  <% @options.each do |option| %>
    <div class="row">
      <div class="col-xs-3">
        <p><strong><%= option.name %></strong></p>
      </div>
      <div class="col-xs-9">
        <p>
          <%= link_to 'Show', option , class: "link"%>
          <%= link_to 'Edit', edit_option_path(option), class: "link" %>
          <%= link_to 'Delete', option, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
        </p>
      </div>
    </div>
  <% end %>
  <a href="<%= new_option_path%>">
    <button>Add new Option</button>
  </a>
</div>
